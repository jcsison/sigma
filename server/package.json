{
  "name": "sigma-server",
  "version": "1.0.0",
  "description": "",
  "author": "jcsison",
  "license": "MIT",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "node --experimental-modules --loader ts-node/esm --max_old_space_size=460 --no-warnings --optimize_for_size src/index.ts | pino-pretty",
    "build": "rimraf ./dist && tsc -p .",
    "build:watch": "tsc -w -p .",
    "clean": "rimraf ./dist",
    "init": "npm install && npm run-script build",
    "start": "node --experimental-modules --experimental-specifier-resolution=node --max_old_space_size=460 --no-warnings --optimize_for_size dist/src/index.js | pino-pretty"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "pino": "^8.14.2",
    "pino-pretty": "^10.2.0",
    "serialize-error": "^11.0.0",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.9.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-require-extensions": "^0.1.3",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.1",
    "typescript": "^5.1.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint src/**/*.{ts,tsx}"
    ]
  }
}
